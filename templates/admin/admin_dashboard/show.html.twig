{% extends '../../base.html.twig' %}

{% block title %}AdminDashboard{% endblock %}

{% block body %}
    <h1>AdminDashboard</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin_dashboard.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ admin_dashboard.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ admin_dashboard.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ admin_dashboard.createdAt ? admin_dashboard.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ admin_dashboard.updatedAt ? admin_dashboard.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ admin_dashboard.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_dashboard_index') }}">back to list</a>

    <a href="{{ path('app_admin_dashboard_edit', {'id': admin_dashboard.id}) }}">edit</a>

